{{#each service}}
<div class="card shadow">
  <div class="card-item card-name"><h2 class="card-title">{{serviceName}}</h2></div>
  <div class="card-item card-logo"><img src="images/logo.png"></div>
  <div class="card-item card-cats">
    <ul class="flag-list">
        <li>Categories:</li>
      {{#each (split serviceCategories ',')}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="card-item card-cities">
    <ul class="flag-list">
        <li>Cities:</li>
      {{#each (split serviceCities ',')}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="card-item card-desc">{{serviceDescription}}</div>
  <div class="card-item card-buttons">DONATE CONTACT ABOUT</div>
</div>
{{/each}}